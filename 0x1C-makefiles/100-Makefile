CC = gcc
SRC = main.c file1.c file2.c
OBJ = $(SRC:.c=.o)
NAME = school
RM = rm -f
CFLAGS = -Wall -Werror -Wextra -pedantic

.PHONY: all clean fclean oclean re

all: $(NAME)

$(NAME): $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(OBJ) $(NAME) *~ \#*\#

oclean:
	$(RM) $(OBJ)

fclean: clean

re: fclean all
